<Application x:Class="CodeverseWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CodeverseWPF"
             StartupUri="Windows/Autorization.xaml">
    <Application.Resources>
        <Style x:Key="Roboto">
            <Setter 
                Property="TextElement.FontFamily"
                Value="/Fonts/Roboto/#Roboto">
            </Setter>
        </Style>
        <Style x:Key="Montserrat">
            <Setter 
                Property="TextElement.FontFamily"
                Value="/Fonts/Montserrat/#Montserrat">
            </Setter>
        </Style>
    </Application.Resources>
</Application>
