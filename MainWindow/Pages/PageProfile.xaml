<Page x:Class="CodeverseWPF.MainWindow.Pages.PageProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeverseWPF.MainWindow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1064" d:DesignWidth="1680"
      Title="PageClient">

    <Grid Background="#FFB3D9FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Montserrat}" Orientation="Horizontal" Height="60" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel x:Name="SPChangeBtns" Orientation="Horizontal" IsEnabled="False">
                <Button x:Name="BtnCompleteChange" Width="250" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFCAFFBF" Click="BtnCompleteChange_Click">Сохранить</Button>
                <Button x:Name="BtnReturnChange" Width="250" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFFFADAD" Click="BtnReturnChange_Click">Отмена</Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Style="{StaticResource Roboto}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="Photo" Width="500" Height="500" Source="/MainWindow/Pages/white.jpg"></Image>
            <Button x:Name="BtnChangePhoto" Width="250" Height="40" FontSize="24" Background="#FFCAFFBF" Click="BtnChangePhoto_Click" Margin="0,25,0,0" Foreground="Black">Изменить</Button>
        </StackPanel>

        <StackPanel Style="{StaticResource Roboto}" Grid.Column="1" Grid.Row="1" Margin="0,0,25,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Имя</TextBlock>
                <TextBox x:Name="TBName" Width="400" Height="40" Margin="50,0,0,0" FontSize="24" TextChanged="TBName_TextChanged"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Фамилия</TextBlock>
                <TextBox x:Name="TBSurname" Width="400" Height="40" Margin="50,0,0,0" FontSize="24" TextChanged="TBSurname_TextChanged"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Должность</TextBlock>
                <TextBox x:Name="TBPosition" Width="400" Height="40" Margin="50,0,0,0" FontSize="24" TextChanged="TBEmail_TextChanged" IsEnabled="False"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Почта</TextBlock>
                <TextBox x:Name="TBEmail" Width="400" Height="40" Margin="50,0,0,0" FontSize="24" TextChanged="TBEmail_TextChanged"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Логин</TextBlock>
                <TextBox x:Name="TBLogin" Width="400" Height="40" Margin="50,0,0,0" FontSize="24" TextChanged="TBLogin_TextChanged"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Пароль</TextBlock>
                <TextBox x:Name="TBPassword" Width="400" Height="40" Margin="50,0,0,0" FontSize="24" TextChanged="TBPassword_TextChanged"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Style="{StaticResource Montserrat}" Grid.Column="0" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock FontSize="18" Foreground="#FFF90505" Margin="25,0,0,0">Последние действия:</TextBlock>
            <TextBlock x:Name="ResentAct" FontSize="18" Foreground="#FFF90505" Margin="25,0,0,0"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
