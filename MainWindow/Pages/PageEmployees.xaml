<Page x:Class="CodeverseWPF.MainWindow.Pages.PageEmployees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeverseWPF.MainWindow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1064" d:DesignWidth="1680"
      Title="PageEmployee">

    <Grid Background="#FFB3D9FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Montserrat}" Height="110" VerticalAlignment="Top">
            <StackPanel x:Name="SPFilterBtns" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox x:Name="TBSearch" Width="400" Height="40" Margin="25,0,0,0" FontSize="24"></TextBox>
                <Button x:Name="BtnSearch" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FF9BF6FF" Click="BtnSearch_Click">Поиск</Button>
                <TextBlock FontSize="16" Margin="20,0,0,0" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">По должности</TextBlock>
                <ComboBox x:Name="CBTPositionFilter" SelectionChanged="CBTPositionFilter_SelectionChanged" Width="300" Height="40" Margin="10,0,0,0" MaxDropDownHeight="320">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Position1}" Style="{StaticResource Roboto}" FontSize="24"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button x:Name="BtnClear" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFBDB2FF" Click="BtnClear_Click">Очистить</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <StackPanel x:Name="SPMainBtns" Orientation="Horizontal">
                    <Button x:Name="BtnCreate" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFCAFFBF" Click="BtnCreate_Click">Добавить</Button>
                    <Button x:Name="BtnChange" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFCAFFBF" Click="BtnChange_Click">Изменить</Button>
                    <Button x:Name="BtnDelete" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFCAFFBF" Click="BtnDelete_Click">Удалить</Button>
                </StackPanel>
                <StackPanel x:Name="SPChangeBtns" Orientation="Horizontal">
                    <Button x:Name="BtnCompleteChange" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FF90F16E" Click="BtnCompleteChange_Click">Сохранить</Button>
                    <Button x:Name="BtnReturnChange" Width="150" Height="40" Margin="25,0,0,0" FontSize="24" Background="#FFE2755D" Click="BtnReturnChange_Click">Отмена</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <ListBox x:Name="ListEmployees" Grid.Column="0" Grid.Row="1" Width="800" Height="850" HorizontalAlignment="Left" Margin="25,0,0,0" SelectionChanged="ListEmployees_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5,5,5,5" Orientation="Horizontal">
                        <Image Source="{Binding Path=Image}" Width="100" Height="100" Margin="25,0,0,0"></Image>
                        <StackPanel Margin="50,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="24" Text="ФИО - " Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                <TextBlock FontSize="24" Text="{Binding Path=Surname}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                <TextBlock FontSize="24" Text="{Binding Path=Name}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="24" Text="Почта - " Margin="10,0,0,0"></TextBlock>
                                <TextBlock FontSize="24" Text="{Binding Path=Email}" Margin="10,0,0,0"></TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="24" Text="Должность - " Margin="10,0,0,0"></TextBlock>
                                <TextBlock FontSize="24" Text="{Binding Path=Position}" Margin="10,0,0,0"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel x:Name="SPChange" Style="{StaticResource Roboto}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,25,0" VerticalAlignment="Center">
            <Image x:Name="Photo" Width="300" Height="300" Source="/MainWindow/Pages/white.jpg"/>
            <Button x:Name="BtnSelectImg" Margin="0,15,0,0" Width="200" Height="30" Click="BtnSelectImg_Click" FontSize="18" Background="#FFCAFFBF" Foreground="Black">Выбрать фото</Button>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,50,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Имя</TextBlock>
                <TextBox x:Name="TBName" Width="400" Height="40" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Фамилия</TextBlock>
                <TextBox x:Name="TBSurname" Width="400" Height="40" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Должность</TextBlock>
                <ComboBox x:Name="CBTPosition" Width="400" Height="40" Margin="50,0,0,0" MaxDropDownHeight="320">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Position1}" Style="{StaticResource Roboto}" FontSize="24"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Почта</TextBlock>
                <TextBox x:Name="TBEmail" Width="400" Height="40" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Логин</TextBlock>
                <TextBox x:Name="TBLogin" Width="400" Height="40" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Foreground="Black">Пароль</TextBlock>
                <TextBox x:Name="TBPassword" Width="400" Height="40" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Style="{StaticResource Montserrat}" Grid.Column="0" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock FontSize="16" Foreground="#FFF90505" Margin="25,0,0,0">Последние действия:</TextBlock>
            <TextBlock x:Name="ResentAct" FontSize="16" Foreground="#FFF90505" Margin="25,0,0,0"></TextBlock>
        </StackPanel>
    </Grid>
</Page>