<Page x:Class="CodeverseWPF.MainWindow.Pages.PageImportExport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeverseWPF.MainWindow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1680"
      Title="ImportExport">

    <Grid Background="#FFB3D9FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="2" x:Name="Clear" FontSize="24" Height="45" Width="200" Click="Clear_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Background="#FFBDB2FF">Очистить</Button>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Roboto}" VerticalAlignment="Center">
            <StackPanel x:Name="SPImport" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="25,0,0,0" Foreground="Black" Width="120">Импорт :</TextBlock>
                <Button x:Name="BtnExelImport" FontSize="24" Margin="25,0,0,0" Height="45" Width="200" Click="BtnExelImport_Click" Background="#FFCAFFBF">Excel</Button>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Text="Из базы" Margin="50,0,0,0" Foreground="Black" Width="140"/>
                <ComboBox x:Name="ImportFromDB" FontSize="24" Margin="25,0,0,0" Height="45" Width="250" SelectionChanged="ImportFromDB_SelectionChanged">
                    <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Клиенты</Label>
                    <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Детали</Label>
                    <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Бренды</Label>
                    <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Типы деталей</Label>
                    <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Устройства</Label>
                    <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Сотрудники</Label>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="SPExport" Style="{StaticResource Roboto}" VerticalAlignment="Center" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="25,0,0,0" Foreground="Black" Width="120">Экспорт :</TextBlock>
                    <Button x:Name="BtnToDB" FontSize="24" Margin="25,0,0,0" Height="45" Width="200" Click="BtnToDB_Click" Background="#FFFDFFB6">В базу</Button>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="50,0,0,0" Foreground="Black" Width="140">Таблица БД
                    </TextBlock>
                    <ComboBox x:Name="CBTables" FontSize="24" Margin="25,0,0,0" Height="45" Width="250">
                        <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Клиенты</Label>
                        <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Детали</Label>
                        <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Бренды</Label>
                        <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Типы устройств</Label>
                        <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Типы деталей</Label>
                        <Label FontFamily="Nunito" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Устройства</Label>
                    </ComboBox>
                    <Button x:Name="ToExcel" FontSize="24" Margin="50,0,0,0" Height="45" Width="150
                            " Click="ToExcel_Click" Background="#FFFFD6A5">В Excel</Button>
                    <Button x:Name="ToJson" FontSize="24" Margin="20,0,0,0" Height="45" Width="150" Click="ToJson_Click" Background="#FFFFD6A5">В Json</Button>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="25,0,0,0" Foreground="Black">Имя файла</TextBlock>
                    <TextBox x:Name="TBDocumentName" Height="45" Width="280" Margin="30,0,0,0" FontSize="36" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Center" >
            <DataGrid x:Name="DbGrig" 
                  ItemsSource="{Binding}"                  
                  Margin="20,20,20,10" 
                  Height="780"
                  Style="{StaticResource Roboto}" 
                  FontSize="32"                 
                  />
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Foreground="Black" Margin="0,0,0,20">Вывод результата</TextBlock>
        </StackPanel>
    </Grid>
</Page>