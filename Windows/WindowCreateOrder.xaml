<Window x:Class="CodeverseWPF.Windows.WindowCreateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeverseWPF.Windows"
        mc:Ignorable="d"
        Title="Создание заказа" Height="750" Width="600" WindowStartupLocation="CenterScreen" Icon="/Windows/logo-codeverse.jpg">
    <Grid Background="#FFB3D9FF">
        <StackPanel Style="{StaticResource Roboto}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="SPClient" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="TBSearch" Width="300" Height="30" FontSize="24"/>
                    <Button x:Name="BtnSearch" Width="100" Height="30" Margin="15,0,0,0" FontSize="20" Background="#FF9BF6FF" Click="BtnSearch_Click">Поиск</Button>
                    <Button x:Name="BtnClear" Width="100" Height="30" Margin="15,0,0,0" FontSize="20" Background="#FFFFADAD" Click="BtnClear_Click">Очистить</Button>
                </StackPanel>
                <TextBlock VerticalAlignment="Center" FontSize="24" Foreground="Black" HorizontalAlignment="Center" Margin="0,25,0,0">Выберите клиента</TextBlock>
                <ListBox x:Name="ListClient" Grid.Column="0" Grid.Row="1" Width="500" Height="450" HorizontalAlignment="Center" SelectionChanged="ListClient_SelectionChanged" Margin="0,15,0,0" VerticalAlignment="Center">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5,5,5,5" Orientation="Horizontal">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="20" Text="Имя и фамилия - " Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                        <TextBlock FontSize="20" Text="{Binding Path=Name}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                        <TextBlock FontSize="20" Text="{Binding Path=Surname}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="20" Text="Номер телефона - " Margin="10,0,0,0"></TextBlock>
                                        <TextBlock FontSize="20" Text="{Binding Path=Phone}" Margin="10,0,0,0"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="20" Text="Почта - " Margin="10,0,0,0"></TextBlock>
                                        <TextBlock FontSize="20" Text="{Binding Path=Email}" Margin="10,0,0,0"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <DatePicker x:Name="DatePicker" FontSize="24" Margin="0,15,0,0" Width="300"></DatePicker>
            </StackPanel>
            <StackPanel x:Name="SPOptions" Style="{StaticResource Roboto}" Visibility="Collapsed">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="36">Добавить в заказ</TextBlock>
                <Button x:Name="BtnServices" Content="Услуги" Height="60" FontSize="32" Background="#FFCAFFBF" Margin="0,50,0,0" Click="BtnServices_Click"></Button>
                <Button x:Name="BtnDevices" Content="Компьютеры" Height="60" FontSize="32" Background="#FFCAFFBF" Margin="0,25,0,0" Click="BtnDevices_Click"></Button>
                <Button x:Name="BtnDetails" Content="Детали" Height="60" FontSize="32" Background="#FFCAFFBF" Margin="0,25,0,0" Click="BtnDetails_Click"></Button>
            </StackPanel>
            <StackPanel Margin="0,30,0,0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="Create" Content="Создать" FontSize="24" Background="#FFCAFFBF" Width="200" Height="45" Click="Create_Click"></Button>
                <Button x:Name="Return" Content="Отмена" FontSize="24" Background="#FFFFADAD" Width="200" Height="45" Margin="25,0,0,0" Click="Return_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
