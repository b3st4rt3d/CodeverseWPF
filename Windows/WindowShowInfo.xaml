<Window x:Class="CodeverseWPF.Windows.WindowShowInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeverseWPF.Windows"
        mc:Ignorable="d"
        Title="Подробная информация о заказе" Height="900" Width="1200" Icon="/Windows/logo-codeverse.jpg" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFB3D9FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Width="110" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Foreground="Black">№ заказа</TextBlock>
                <TextBlock Foreground="Black" x:Name="TBOrderID" Width="60" Margin="10,0,0,0" FontSize="24"/>
                <TextBlock Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Foreground="Black" Margin="10,0,0,0">Дата</TextBlock>
                <TextBlock Foreground="Black" Name="TBDate" FontSize="24" Width="300"  Margin="10,0,0,0"></TextBlock>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Foreground="Black">Статус</TextBlock>
                <TextBlock Foreground="Black" Name="TBState" FontSize="24" Width="400" Margin="50,0,0,0"></TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Foreground="Black">Итого</TextBlock>
                <TextBlock Foreground="Black" x:Name="TBTotal" Width="400" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Foreground="Black">Клиент</TextBlock>
                <TextBlock Foreground="Black" x:Name="TBClient" Width="400" Margin="50,0,0,0" FontSize="24"/>
            </StackPanel>
        </StackPanel>
        <Separator Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" Margin="0,2,0,25"></Separator>
        <StackPanel Style="{StaticResource Roboto}" Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Детали" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,5,0,0"></TextBlock>
            <ListBox x:Name="ListDetails" Grid.Column="0" Grid.Row="1" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Margin="5,15,5,5" Height="600" RenderTransformOrigin="0.874,0.313" SelectionChanged="ListDetails_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,5,5,5" Orientation="Horizontal">
                            <Image Width="75" Height="75" Source="{Binding Path=Image}"></Image>
                            <StackPanel Margin="50,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Компьютер - " Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=OrderId}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Цена - " Margin="10,0,0,0"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Price}" Margin="10,0,0,0"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Количество - " Margin="10,0,0,0"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Count}" Margin="10,0,0,0"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>

        <StackPanel Style="{StaticResource Roboto}" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Компьютеры" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,5,0,0"></TextBlock>
            <ListBox x:Name="ListDevices" Grid.Column="0" Grid.Row="1" Margin="5,15,5,5" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Height="600">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,5,5,5" Orientation="Horizontal">
                            <Image Width="75" Height="75" Source="{Binding Path=Image}"/>
                            <StackPanel Margin="25,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="{Binding Path=Device}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="{Binding Path=Price}" Margin="10,0,0,0"></TextBlock>
                                    <TextBlock FontSize="24" Text=" Руб." Margin="10,0,0,0"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="В заказе " Margin="10,0,0,0"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Count}" Margin="10,0,0,0"></TextBlock>
                                    <TextBlock FontSize="24" Text=" шт." Margin="10,0,0,0"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Style="{StaticResource Roboto}" Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Услуги" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,5,0,0"></TextBlock>
            <ListBox x:Name="ListServices" Grid.Column="0" Grid.Row="1" Margin="5,15,5,5" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Height="600" SelectionChanged="ListServices_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,5,5,5" Orientation="Horizontal" Style="{StaticResource Roboto}">
                            <StackPanel Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Услуга - " Margin="10,0,0,0" FontWeight="Bold" ></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Service}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Цена - " Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Price}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                    <TextBlock FontSize="24" Text=" Руб." Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>