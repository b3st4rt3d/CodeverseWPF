<Window x:Class="CodeverseWPF.Windows.WindowOrderServices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeverseWPF.Windows"
        mc:Ignorable="d"
        Title="Изменение списка услуг" Height="900" Width="900" Icon="/Windows/logo-codeverse.jpg" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFB3D9FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBox x:Name="TBSearch" Width="400" Height="40" Margin="10,10,0,0" FontSize="24"></TextBox>
            <Button x:Name="BtnSearch" Width="150" Height="40" Margin="20,10,0,0" FontSize="24" Background="#FF9BF6FF" Click="BtnSearch_Click" Foreground="Black">Поиск</Button>
            <Button x:Name="BtnClear" Width="150" Height="40" Margin="20,10,0,0" FontSize="24" Background="#FFBDB2FF" Click="BtnClear_Click">Очистить</Button>
        </WrapPanel>

        <StackPanel Style="{StaticResource Roboto}" Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Все услуги" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"></TextBlock>
            <ListBox x:Name="ListServices" Grid.Column="0" Grid.Row="1" SelectionChanged="ListServices_SelectionChanged" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Margin="5,15,5,5" Height="740">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,5,5,5" Orientation="Horizontal" Style="{StaticResource Roboto}">
                            <StackPanel Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Услуга - " Margin="10,0,0,0" FontWeight="Bold" ></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Service1}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Цена - " Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Price}" Margin="10,0,0,0" FontWeight="Bold" ></TextBlock>
                                    <TextBlock FontSize="24" Text=" Руб." Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>

        <StackPanel Style="{StaticResource Roboto}" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="В заказе" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"></TextBlock>
            <ListBox x:Name="ListOrderServices" Grid.Column="0" Grid.Row="1" Margin="5,15,5,5" SelectionChanged="ListOrderServices_SelectionChanged" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Height="740">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,5,5,5" Orientation="Horizontal" Style="{StaticResource Roboto}">
                            <StackPanel Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Услуга - " Margin="10,0,0,0" FontWeight="Bold" ></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Service}" Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="24" Text="Цена - " Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                    <TextBlock FontSize="24" Text="{Binding Path=Price}" Margin="10,0,0,0" FontWeight="Bold" ></TextBlock>
                                    <TextBlock FontSize="24" Text=" Руб." Margin="10,0,0,0" FontWeight="Bold"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>