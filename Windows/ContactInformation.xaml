<Window x:Class="CodeverseWPF.Windows.ContactInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeverseWPF.Windows"
        mc:Ignorable="d"
        Title="Контактные данные" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource Roboto}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold">Контактные данные</TextBlock>
        <StackPanel Style="{StaticResource Montserrat}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="36" FontWeight="Bold">ФИО</TextBlock>
                <TextBlock x:Name="TBName" Margin="25,0,0,0" FontSize="36">Михаил Чан</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock FontSize="36" FontWeight="Bold">Телефон</TextBlock>
                <TextBlock x:Name="TBPhone" Margin="25,0,0,0" FontSize="36">+7-999-100-11-22</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock FontSize="36" FontWeight="Bold">Email</TextBlock>
                <TextBlock x:Name="TBMail" Margin="25,0,0,0" FontSize="36">email@mail.ru</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock FontSize="36" FontWeight="Bold">Номер заказа</TextBlock>
                <TextBlock x:Name="TBOrder" Margin="25,0,0,0" FontSize="36">Lenovo Ideapad Gaming 3 15YAH</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock FontSize="36" FontWeight="Bold">Сумма</TextBlock>
                <TextBlock x:Name="TBPrice" Margin="25,0,0,0" FontSize="36">1500</TextBlock>
                <TextBlock Margin="25,0,0,0" FontSize="36">Руб.</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>